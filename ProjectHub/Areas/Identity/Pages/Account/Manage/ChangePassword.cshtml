@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h2 class="text-center">@ViewData["Title"]</h2><br />
<form class="form-sm shadow-sm" id="change-password-form" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Input.OldPassword"></label>
        <div class="input-group">
            <input asp-for="Input.OldPassword" class="form-control border-right-0" id="old-password-field" />
            <div class="input-group-append">
                <span class="input-group-text bg-transparent">
                    <i toggle="#old-password-field" class="far fa-eye-slash field-icon toggle-password"></i>
                </span>
            </div>
        </div>
        <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.NewPassword"></label>
        <div class="input-group">
            <input asp-for="Input.NewPassword" class="form-control border-right-0" id="new-password-field" />
            <div class="input-group-append">
                <span class="input-group-text bg-transparent">
                    <i toggle="#new-password-field" class="far fa-eye-slash field-icon toggle-password"></i>
                </span>
            </div>
        </div>
        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.ConfirmPassword"></label>
        <div class="input-group">
            <input asp-for="Input.ConfirmPassword" class="form-control border-right-0" id="confirm-password-field" />
            <div class="input-group-append">
                <span class="input-group-text bg-transparent">
                    <i toggle="#confirm-password-field" class="far fa-eye-slash field-icon toggle-password"></i>
                </span>
            </div>
        </div>
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div><br />
    <div class="form-group">
        <button type="submit" class="btn btn-outline-primary btn-lg btn-block">Update password</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}