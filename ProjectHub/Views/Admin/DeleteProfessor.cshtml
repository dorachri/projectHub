@model ProfessorViewModel

@{
    ViewData["Title"] = "Delete professor";
}

<div class="container">
    <h2>Are you sure you want to delete this user?</h2><br />

    @await Html.PartialAsync("_UserDetailsPartial", Model.User?.Id)

    <div class="mb-5">
        <h4>Professor info</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Institution)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Institution)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Department)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Department)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.School)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.School)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Rank)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Rank)
            </dd>
        </dl>

        <form asp-action="DeleteProfessor" method="post">
            @Html.HiddenFor(model => model.ProfessorId)
            <input type="submit" value="Delete" class="btn btn-link text-danger p-0" /> |
            <a href='javascript:history.go(-1)' class="btn btn-link p-0">Back to previous page</a>
        </form>
    </div>
</div>
