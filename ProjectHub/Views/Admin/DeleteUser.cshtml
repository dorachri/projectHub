@model ApplicationUser
@using ProjectHub.Areas.Identity.Data

@{
    ViewData["Title"] = "Delete user";
}

<div class="container">
    <h2>Are you sure you want to delete this user?</h2><br />

    @await Html.PartialAsync("_UserDetailsPartial", Model.Id)

    <div class="mb-5">
        <form asp-action="DeleteUser" method="post">
            @Html.HiddenFor(model => model.Id)
            <input type="submit" value="Delete" class="btn btn-link text-danger p-0" /> |
            <a href='javascript:history.go(-1)' class="btn btn-link p-0">Back to previous page</a>
        </form>
    </div>
</div>
